{
    "name": "of2plus",
    "displayName": "of2plus-devkit",
    "description": "Extension for working with OpenFoam",
    "repository" : "https://github.com/clowzed/of2plus",
    "publisher"  : "clowzed",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.65.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "of2plus.build",
                "title": "Build with wmake",
                "category": "of2plus: ",
                "icon": "$(symbol-property)"
            },
            {
                "command": "of2plus.genfolders",
                "title": "of2plus: Generate standart folder structure."
            },
            {
                "command": "of2plus.downloadOF",
                "title": "of2plus: Download openfoam prebuilds."
            },
            {
                "command": "of2plus.choose_build",
                "title": "of2plus: Choose openfoam build."
            },
            {
                "command": "of2plus.run",
                "title": "Run from build folder",
                "category": "of2plus: ",
                "icon": "$(play)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "of2plus.build",
                    "group": "navigation"
                },
                {
                    "command": "of2plus.run",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "postinstall": "npm install"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "@types/node-fetch": "^2.6.1",
        "@types/sync-fetch": "^0.4.0",
        "@types/targz": "^1.0.1",
        "@types/vscode": "^1.65.0",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "@typescript-eslint/parser": "^5.12.1",
        "@vscode/test-electron": "^2.1.2",
        "eslint": "^8.9.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.1",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/got": "^9.6.12",
        "child_process": "^1.0.2",
        "dns": "^0.2.2",
        "fs-extra": "^10.0.1",
        "got": "^12.0.3",
        "node-fetch": "^2.6.7",
        "of2plus": "file:",
        "pathlib-js": "^1.3.0",
        "sync-fetch": "^0.4.1",
        "targz": "^1.0.1"
    }
}
